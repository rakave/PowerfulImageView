<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressImageView">
        <attr name="piv_use_determinate_progress_animation" format="boolean" />
        <attr name="piv_progress_circle_border_width" format="dimension" />
        <attr name="piv_progress_circle_size" format="dimension" />
        <attr name="piv_progress_circle_size_percent" format="float" />
        <attr name="piv_progress_percent" format="float" />
        <attr name="piv_progress_front_color" format="color" />
        <attr name="piv_progress_back_color" format="color" />
        <attr name="piv_indeterminate_progress_color" format="color" />
        <attr name="piv_progress_mode" format="enum" >
            <enum name="disabled" value="0"/>
            <enum name="indeterminate" value="1"/>
            <enum name="determinate" value="2"/>
            <enum name="horizontal_determinate" value="3"/>
            <enum name="horizontal_indeterminate" value="4"/>
        </attr>
    </declare-styleable>
</resources>