<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.stefanosiano.powerlessimageview.PowerlessImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#ff707070"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:padding="0dp"
        app:piv_shape_mode="square"
        app:piv_shape_background_color="@color/colorPrimaryDark"
        app:piv_shape_border_width="10dp"
        app:piv_shape_border_color="#a0000000"
        app:piv_shape_border_overlay="false"
        app:piv_shape_ratio="2"
        android:src="@android:drawable/btn_star" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="150dp"
        android:background="#707070"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:src="@android:drawable/btn_star" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.stefanosiano.powerfulimageviewsample.MainActivity">

        <TableRow>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="10dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:background="#707070"
                android:layout_margin="8dp"
                android:minWidth="0dp"
                android:src="#2040f0"

                app:piv_progress_indeterminate_color="#2040f0"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"
                android:src="#2040f0"


                app:piv_shape_mode="normal"
                app:piv_progress_shadow_border_width="1dp"
                app:piv_progress_shadow_border_color="@color/colorAccent"
                app:piv_progress_mode="circular"
                />

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#60ea0aea"
                android:layout_margin="8dp"

                app:piv_progress_shadow_border_width="14dp"
                app:piv_progress_shadow_border_color="@android:color/white"
                app:piv_progress_shadow_color="#000000"
                app:piv_progress_shadow_enabled="true"
                app:piv_progress_border_width="20dp"
                app:piv_progress_shadow_padding="4dp"
                app:piv_progress_gravity="top_start"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="horizontal"
                app:piv_progress_front_color="@color/colorAccent"
                app:piv_progress_back_color="@color/colorPrimaryDark"
                app:piv_progress_size_percent="100"
                app:piv_progress_indeterminate="false"/>

        </TableRow>

        <TableRow>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="start"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="center"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="end"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

        </TableRow>

        <TableRow>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom_start"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerlessimageview.PowerlessImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom_end"
                app:piv_progress_value_percent="30"
                app:piv_progress_mode="circular"/>

        </TableRow>
    </TableLayout>

</LinearLayout>