<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="3"
    tools:context="com.stefanosiano.powerfulimageviewsample.MainActivity">

    <TableRow>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="top_start"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"
            android:src="@android:color/black"

            />

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="top_end"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

    </TableRow>

    <TableRow>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="start"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="center"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="end"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

    </TableRow>

    <TableRow>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="bottom_start"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="bottom"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

        <com.stefanosiano.powerlessimageview.PowerlessImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="#eaeaea"
            android:layout_margin="8dp"

            app:piv_progress_gravity="bottom_end"
            app:piv_progress_value_percent="30"
            app:piv_progress_mode="indeterminate"/>

    </TableRow>
</TableLayout>
