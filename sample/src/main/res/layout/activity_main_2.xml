<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stefanosiano.powerfulimageview.PowerfulImageView
        android:id="@+id/piv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:background="#80a0a0a0"

        app:piv_progress_indeterminate_color="@color/colorAccent"
        app:piv_progress_size_percent="100"
        app:piv_progress_shadow_padding="2dp"
        app:piv_progress_border_width="8dp"
        app:piv_progress_value_percent="0"
        app:piv_progress_mode="disabled"/>

</LinearLayout>